        <div class="input-group-prepend">
            <span class="password-showhide">
                <button type="button" onclick="showHideConfirmPassword(this)" class="show-password btn btn-link">@lang.Show</button>
                <button type="button" onclick="showHideConfirmPassword(this)" class="hide-password btn btn-link">@lang.Hide</button>
