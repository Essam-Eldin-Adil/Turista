    <input type="hidden" name="Id" value="@Model.Id" />
    <input type="hidden" asp-for="UserName" />
    @if (string.IsNullOrEmpty(Model.FirstName))
    {
        <div class="col-12 form-group">
            <label for="password">@lang.Name:</label>
            <input type="text" id="FirstName" name="FirstName" class="form-control required" required value="" placeholder="@lang.EnterYourFirstName">
        </div>
    }
    else
    {
        <input type="hidden" name="FirstName" value="@Model.FirstName">
    }
