@model List<Turista.Data.Resorts.Resort>
@{
    var dir = "";
    if (@HttpContextAccessor.HttpContext?.Session.GetString("LanguageDirection").ToLower() == "rtl")
    {
        dir = "ltr";
    }
    else
    {
        dir = "rtl";
    }

}

<div class="row">
    @foreach (var item in Model)
    {

        @*<div class="real-estate-item portfolio-item mb-5 col-12 col-md-6 col-lg-4">*@
        <div class="entry col-12 col-md-6 col-lg-6 mb-3">

            <partial name="resortCard" model="@item" />
        </div>
    }


</div>

@if (!Model.Any())
{
    <div class="text-center">
        <div class="pt-2">
            <i class="icon-ban" style="font-size:120px"></i>
        </div>
        <div class="pt-1">
            @lang.NoData
        </div>
    </div>
}
