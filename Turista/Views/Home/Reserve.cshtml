                                                                    &Chi;
                                                                    <label>
                                                                        @if (dates.DaysCount == 1)
                                                                        {
                                                                            <span>@lang.OneNight</span>
                                                                        }
                                                                        else if (dates.DaysCount == 2)
                                                                        {
                                                                            <span>@lang.TowNights</span>
                                                                        }
                                                                        else if (dates.DaysCount > 2 && dates.DaysCount < 10)
                                                                        {
                                                                            <span>@dates.DaysCount @lang.Nights</span>
                                                                        }
