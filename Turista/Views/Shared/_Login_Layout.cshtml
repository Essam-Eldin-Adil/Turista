<!DOCTYPE html>
<html dir="@HttpContextAccessor.HttpContext?.Session.GetString("LanguageDirection")" lang="@HttpContextAccessor.HttpContext?.Session.GetString("Language")">
<head>

    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <meta name="author" content="@Domain.Settings.Get(context).Author" />

    <!-- Stylesheets
    ============================================= -->
    @if (HttpContextAccessor.HttpContext?.Session.GetString("LanguageName") == lang.Arabic)
    {
        <link rel="stylesheet" href="~/css/bootstrap-rtl.css" type="text/css" />

        <link rel="stylesheet" href="~/style-rtl.css" type="text/css" />
    }
    else
    {
        <link rel="stylesheet" href="~/css/bootstrap.css" type="text/css" />

        <link rel="stylesheet" href="~/style.css" type="text/css" />
    }
    <link rel="stylesheet" href="~/css/dark.css" type="text/css" />

    <!-- Real Estate Demo Specific Stylesheet -->
    @if (HttpContextAccessor.HttpContext?.Session.GetString("LanguageName") == lang.Arabic)
    {
        <link rel="stylesheet" href="~/demos/real-estate/real-estate-rtl.css" type="text/css" />
    }
    else
    {
        <link rel="stylesheet" href="~/demos/real-estate/real-estate.css" type="text/css" />
    }
    <link rel="stylesheet" href="~/demos/real-estate/css/font-icons.css" type="text/css" />
    <!-- / -->

    <link rel="stylesheet" href="~/css/font-icons.css" type="text/css" />
    <link rel="stylesheet" href="~/css/animate.css" type="text/css" />
    <link rel="stylesheet" href="~/css/magnific-popup.css" type="text/css" />

    <link rel="stylesheet" href="~/demos/real-estate/fonts.css" type="text/css" />

    <!-- Bootstrap Select CSS -->
    <link rel="stylesheet" href="~/css/components/bs-select.css" type="text/css" />

    <!-- Bootstrap Switch CSS -->
    <link rel="stylesheet" href="~/css/components/bs-switches.css" type="text/css" />

    <!-- Range Slider CSS -->
    <link rel="stylesheet" href="~/css/components/ion.rangeslider.css" type="text/css" />

    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="~/css/fonts.css" rel="stylesheet" />
    @if (HttpContextAccessor.HttpContext?.Session.GetString("LanguageName") == lang.Arabic)
    {
        <link rel="stylesheet" href="~/css/custom-rtl.css" type="text/css" />
    }
    else
    {
        <link rel="stylesheet" href="~/css/custom.css" type="text/css" />
    }
    <link href="https://fonts.googleapis.com/css?family=Lora:400,400i|Roboto:300,400,500,700|Rubik:400,600&display=swap" rel="stylesheet">

    <!-- Document Title
    ============================================= -->
    <title>@ViewBag.Title - @Domain.Settings.Get(context).AppName</title>
    @RenderSection("css", false)
</head>

<body class="stretched side-push-panel">

    <div>
        @RenderBody()
    </div>
    <!-- Go To Top
        ============================================= -->
    <div id="gotoTop" class="icon-angle-up"></div>

    <!-- JavaScripts
    ============================================= -->
    <script src="~/js/jquery.js"></script>
    <script src="~/js/plugins.min.js"></script>
    <script src="https://maps.google.com/maps/api/js?key=YOUR-API-KEY"></script>

    <!-- Bootstrap Select Plugin -->
    <script src="~/js/components/bs-select.js"></script>

    <!-- Bootstrap Switch Plugin -->
    <script src="~/js/components/bs-switches.js"></script>

    <!-- Range Slider Plugin -->
    <script src="~/js/components/rangeslider.min.js"></script>

    <!-- Footer Scripts
    ============================================= -->
    <script src="~/js/functions.js"></script>
    @RenderSection("js", false)
</body>
</html>
