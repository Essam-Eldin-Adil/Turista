<!-- Header
============================================= -->
<header id="header" class="transparent-header header-size-custom" data-sticky-shrink="false">
    <div id="header-wrap">
        <div class="container">
            <div class="header-row">

                <!-- Logo
                ============================================= -->
                <div id="logo">
                    <a href="~/Home" class="standard-logo"><img src="~/images/logo.png" alt="Turista Logo"></a>
                    <a href="~/Home" class="retina-logo"><img src="~/images/logo@2x.png" alt="Turista Logo"></a>
                </div><!-- #logo end -->

                <div class="header-misc">
                </div>

                <div id="primary-menu-trigger">
                    <svg class="svg-trigger" viewBox="0 0 100 100"><path d="m 30,33 h 40 c 3.722839,0 7.5,3.126468 7.5,8.578427 0,5.451959 -2.727029,8.421573 -7.5,8.421573 h -20"></path><path d="m 30,50 h 40"></path><path d="m 70,67 h -40 c 0,0 -7.5,-0.802118 -7.5,-8.365747 0,-7.563629 7.5,-8.634253 7.5,-8.634253 h 20"></path></svg>
                </div>

                <!-- Primary Navigation
                ============================================= -->
                <nav class="primary-menu">

                    <ul class="menu-container">
                        <li class="current menu-item"><a class="menu-link" href="~/Home/Index"><div>@lang.Home</div></a></li>
                        <li class="menu-item"><a class="menu-link" href="~/CPanel/Users"><div>@lang.UserManagement</div></a></li>
                        <li class="menu-item"><a class="menu-link" href="~/CPanel/Utilities"><div>@lang.ParameterManagement</div></a></li>
                        <li class="menu-item"><a class="menu-link" href="~/CPanel/Properties"><div>@lang.PropertiesManagement</div></a></li>
                        <li class="menu-item"><a class="menu-link" href="~/CPanel/Cities"><div>@lang.CitiesManagement</div></a></li>
                        <li class="menu-item"><a class="menu-link" href="~/CPanel/Policies"><div>@lang.ReserveCondetionAndPolicy</div></a></li>
                        <li class="menu-item"><a class="menu-link" href="~/CPanel/Settings"><div>@lang.AppSettings</div></a></li>
                        <li class="menu-item">
                            <a class="menu-link" href="~/Accounts/Logout"><div><i class="icon-sign-out-alt font-weight-semibold"></i>@lang.Logout</div></a>
                        </li>
                        @if (HttpContextAccessor.HttpContext?.Session.GetString("LanguageName") == lang.Arabic)
                        {
                            <li class="menu-item">
                                <a asp-controller="Home" asp-action="ChangeLanguage" asp-route-code="en-US" asp-route-flag="flag-icon-us" asp-route-direction="LTR" asp-route-name="@lang.English">@lang.English <img style="width: 30px;" src="~/images/flags/us.png" alt="@lang.iconLang" /></a>
                            </li>
                        }
                        else
                        {
                            <li class="menu-item">
                                <a asp-controller="Home" asp-action="ChangeLanguage" asp-route-code="ar-EG" asp-route-flag="flag-icon-sa" asp-route-direction="RTL" asp-route-name="@lang.Arabic">@lang.Arabic <img style="width: 30px;" src="~/images/flags/sa.png" alt="@lang.iconLang" /></a>
                            </li>
                        }
                    </ul>

                </nav><!-- #primary-menu end -->

            </div>
        </div>
    </div>
    <div class="header-wrap-clone"></div>
</header><!-- #header end -->
