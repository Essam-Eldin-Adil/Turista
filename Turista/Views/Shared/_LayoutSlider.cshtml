    <script>
        const options = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' };

        function fiverate(btn, propertyId) {
            $.ajax({
                url: '@Url.Action("fiverate","Home")',
                type: "POST",
                dataType: "json",
                async: true,
                data: { propertyId: propertyId }
            }).then(function (content) {
                console.log(content);
                if (content == true) {
                    $(btn).find("i").addClass("icon-heart").addClass("text-danger").removeClass("icon-line-heart");
                } else {
                    $(btn).find("i").removeClass("icon-heart").removeClass("text-danger").addClass("icon-line-heart");
                }
            });
        }

        var view = 10;
        function GetDeptProperty(type) {
            var totalReviewCount = Number($("#totalCount").val());
            var currentReview = Number($("#currentReview").val());
            var dates = $("#reservedate").val();
            $.ajax({
                url: '@Url.Action("getProperty")',
                type: "GET",
                dataType: "html",
                async: true,
                data: { type: type, pageNumber: currentReview,dates:dates }
            }).then(function (content) {
                if (currentReview == 0) {
                    $("#PropertyContent").html(content);
                } else {
                    $("#PropertyContent").append(content);
                }
                currentReview = currentReview + view;
                $("#currentReview").val(currentReview);
                if (currentReview >= totalReviewCount) {
                    $("#loadMoreBtn").fadeOut(0);
                }
            });
        }
             function GetCheckIn() {
            var date = $("#reservedate").val();
            $.ajax({
                url: '@Url.Action("GetCheckInForDept")',
                type: "GET",
                dataType: "html",
                async: true,
                data: { date: date }
            }).then(function (content) {
                $("#dateContent").html(content);
            });
    }

     $(function () {

        $("#reservedate").daterangepicker({
                numberOfMonths: 6,
            isRTL: true,
            initialText: '@Html.Raw(lang.BookingDate)',
                applyOnMenuSelect: false,
                datepickerOptions: {
                    minDate: 0,
                    maxDate: '6m'
            },
            applyButtonText: `@Html.Raw(lang.Ok)`,
            clearButtonText: '@Html.Raw(lang.Delete)',
            cancelButtonText: '@Html.Raw(lang.Cancel)',

        });

            $("#reservedate").on('change', function (event) {
                GetCheckIn();
                $("#currentReview").val(0)
                GetDeptProperty(@((int)enums.PropertyType.Chalets));
            });
     });


    </script>
